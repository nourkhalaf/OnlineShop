<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_background"
    android:layoutDirection="ltr">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="2dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="User name"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_user_name"
            android:layout_margin="2dp"
            android:padding="4dp"
            android:text="Phone number"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
             />


        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:gravity="center"
            android:padding="4dp"
            android:background="@drawable/btn_background"
            android:backgroundTint="#4CAF50"
            android:text="Total price"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
             />

        <TextView
            android:id="@+id/order_address_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_phone_number"
            android:layout_margin="2dp"
             android:padding="4dp"
            android:text="Address, City"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
              />

        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_address_city"
            android:layout_margin="2dp"
             android:padding="4dp"
            android:text="Date Time"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
             />


        <Button
            android:id="@+id/show_all_products_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Show This Orders Product"
            android:textColor="@android:color/white"
            android:background="@drawable/button_back"
            android:textAllCaps="false"
            android:layout_below="@+id/order_date_time"/>
    </RelativeLayout>


</RelativeLayout>